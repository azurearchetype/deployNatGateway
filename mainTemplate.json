{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing virtual network"
      }
    },
    "subnet1": {
      "type": "string",
      "metadata": {
        "description": "Name of the first subnet in the virtual network"
      }
    },
    "subnet2": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the second subnet (optional)"
      }
    },
    "natGatewayName": {
      "type": "string",
      "defaultValue": "myNatGateway",
      "metadata": {
        "description": "Name of the NAT Gateway to create"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    }
  },
  "variables": {
    "subnetNames": "[if(equals(parameters('subnet2'), ''), array(parameters('subnet1')), array(parameters('subnet1'), parameters('subnet2')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2023-09-01",
      "name": "[concat(parameters('natGatewayName'), '-pip')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Static",
        "publicIPAddressVersion": "IPv4"
      }
    },
    {
      "type": "Microsoft.Network/natGateways",
      "apiVersion": "2023-09-01",
      "name": "[parameters('natGatewayName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIpAddresses": [
          {
            "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('natGatewayName'), '-pip'))]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2023-09-01",
      "name": "[concat(parameters('vnetName'), '/', variables('subnetNames')[copyIndex()])]",
      "copy": {
        "name": "subnetCopy",
        "count": "[length(variables('subnetNames'))]"
      },
      "properties": {
        "natGateway": {
          "id": "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
        }
      }
    }
  ],
  "outputs": {
    "subnetIds": {
      "type": "array",
      "value": "[map(variables('subnetNames'), subnetName => resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), subnetName))]"
    }
  }
}
