{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string"
    },
    "subnetNames": {
      "type": "array"
    },
    "natGatewayName": {
      "type": "string",
      "defaultValue": "myNatGateway"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2023-09-01",
      "name": "[concat(parameters('natGatewayName'), '-pip')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Static",
        "publicIPAddressVersion": "IPv4"
      }
    },
    {
      "type": "Microsoft.Network/natGateways",
      "apiVersion": "2023-09-01",
      "name": "[parameters('natGatewayName')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIpAddresses": [
          {
            "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('natGatewayName'), '-pip'))]"
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "apiVersion": "2023-09-01",
      "name": "[concat(parameters('vnetName'), '/', parameters('subnetNames')[copyIndex()])]",
      "copy": {
        "name": "subnetCopy",
        "count": "[length(parameters('subnetNames'))]"
      },
      "properties": {
        "addressPrefix": "[reference(resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNames')[copyIndex()]), '2023-09-01').properties.addressPrefix]",
        "natGateway": {
          "id": "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
        }
      }
    }
  ],
  "outputs": {
    "subnetIds": {
      "type": "array",
      "value": "[map(parameters('subnetNames'), subnetName => resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), subnetName))]"
    }
  }
}
