{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources, derived from the virtual network's location."
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Name of the existing virtual network."
            }
        },
        "vnetResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Resource group of the existing virtual network."
            }
        },
        "subnetNames": {
            "type": "object",
            "metadata": {
                "description": "Object containing the selected subnet names."
            }
        },
        "natGatewayName": {
            "type": "string",
            "defaultValue": "[concat('natGateway-', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Name of the NAT Gateway."
            }
        },
        "publicIpName": {
            "type": "string",
            "defaultValue": "[concat('pip-natGateway-', uniqueString(resourceGroup().id))]",
            "metadata": {
                "description": "Name of the public IP address for the NAT Gateway."
            }
        }
    },
    "variables": {
        "subnetRefs": "[createArray(format('{0}/subnets/{1}', resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), parameters('subnetNames')[0].name), format('{0}/subnets/{1}', resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), parameters('subnetNames')[1].name), format('{0}/subnets/{1}', resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), parameters('subnetNames')[2].name), format('{0}/subnets/{1}', resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), parameters('subnetNames')[3].name), format('{0}/subnets/{1}', resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vnetName')), parameters('subnetNames')[4].name))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2021-08-01",
            "name": "[parameters('publicIpName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/natGateways",
            "apiVersion": "2021-08-01",
            "name": "[parameters('natGatewayName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpName'))]"
            ],
            "properties": {
                "publicIpAddresses": [
                    {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpName'))]"
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2021-08-01",
            "name": "[format('{0}/{1}', parameters('vnetName'), parameters('subnetNames')[0].name)]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
            ],
            "properties": {
                "addressPrefix": "[reference(resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNames')[0].name), '2021-08-01').addressPrefix]",
                "natGateway": {
                    "id": "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2021-08-01",
            "name": "[format('{0}/{1}', parameters('vnetName'), parameters('subnetNames')[1].name)]",
            "condition": "[greater(length(parameters('subnetNames')), 1)]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
            ],
            "properties": {
                "addressPrefix": "[reference(resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNames')[1].name), '2021-08-01').addressPrefix]",
                "natGateway": {
                    "id": "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2021-08-01",
            "name": "[format('{0}/{1}', parameters('vnetName'), parameters('subnetNames')[2].name)]",
            "condition": "[greater(length(parameters('subnetNames')), 2)]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
            ],
            "properties": {
                "addressPrefix": "[reference(resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNames')[2].name), '2021-08-01').addressPrefix]",
                "natGateway": {
                    "id": "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2021-08-01",
            "name": "[format('{0}/{1}', parameters('vnetName'), parameters('subnetNames')[3].name)]",
            "condition": "[greater(length(parameters('subnetNames')), 3)]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
            ],
            "properties": {
                "addressPrefix": "[reference(resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNames')[3].name), '2021-08-01').addressPrefix]",
                "natGateway": {
                    "id": "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2021-08-01",
            "name": "[format('{0}/{1}', parameters('vnetName'), parameters('subnetNames')[4].name)]",
            "condition": "[greater(length(parameters('subnetNames')), 4)]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
            ],
            "properties": {
                "addressPrefix": "[reference(resourceId(parameters('vnetResourceGroup'), 'Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnetNames')[4].name), '2021-08-01').addressPrefix]",
                "natGateway": {
                    "id": "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
                }
            }
        }
    ],
    "outputs": {
        "natGatewayId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/natGateways', parameters('natGatewayName'))]"
        },
        "publicIpAddressId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpName'))]"
        }
    }
}
